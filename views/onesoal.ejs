<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <p>Benar = <%= counterBenar %></p> 
    <p>Salah = <%= counterSalah %></p> 
    <p>Sekip = <%= counterSekip %></p> 
    <p><%= soal.text_soal %></p>
    <div >
      <form method="POST" action="/onesoal/evaluate">
        <% soal.options.forEach(e => { %>
          <input type="radio" name="answer" value="<%= e %>">
          <%= e %>
          </input>
          <br>
        <% })%>
        <br>
        <input type="submit" value="submit">
      </form>
      <form method="POST" action="/onesoal/reset">
        <input type="submit" value="reset">
      </form>
      <button type="submit">
        <a class="btn btn-dark btn-sm" href="/" >back</a>
      </button>
    </div>
  </body>
</html>
