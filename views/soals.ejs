<!DOCTYPE html>
<html>
  <head>
    <title>soals</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h2>Question <%= indexSoal %> of <%= lengthDatas %></h2>
    <p>Benar = <%= counterBenar %></p>
    <p>Salah = <%= counterSalah %></p>
    <p>Sekip = <%= counterSekip %></p>
    <hr>
    <b><%- soalText %></b>

    <div>
      <form method="POST" action="/soals/evaluate">
        <% choiceArray.forEach(e => { %>
          <input type="radio" name="answer" value="<%= e[2] %>" >
          <%= e[1] %>
          </input>
          <br>
          <% }) %>
          <input type="submit" value="submit">
      </form>
      <form method="POST" action="/soals/reset">
        <input type="submit" value="reset">
      </form>
      <button type="submit">
        <a class="btn btn-dark btn-sm" href="/" >back</a>
      </button>
    </div>
  </body>
</html>
